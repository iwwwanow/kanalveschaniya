{
  "name": "kanalveshchaniya",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "src/**/*"
  ],
  "private": true,
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/bun": "1.3.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "db:push": "bun --env-file=.env.dev --filter '@infrastructure' db:push",
    "db:generate": "bun --env-file=.env.dev --filter '@infrastructure' db:generate",
    "db:migrate": "bun --env-file=.env.dev --filter '@infrastructure' db:migrate"
  }
}
